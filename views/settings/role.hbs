<div class="row my-3 p-10 bg-white border rounded">
    <div class="col-12 mb-4 d-flex justify-content-between align-items-center my-5">
        <div>
            <h3>Roles</h3>
        </div>
        <div style="padding:10px 20px 10px 20px;" class="role_add_btn btn btn-light-primary btn-icon"><i
                class='fa fa-plus'></i></div>
    </div>
    <div class="col-12">
        <div class="table-responsive">
            <table class="table" id="role_tb">
                <thead>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="role_add_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title ">Role Addition</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <h6>Code</h6>
                            <input id="role_add_code" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>Role Name</h6>
                            <input id="role_add_name" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <h6>Description</h6>
                            <input id="role_add_description" class="form-control" type="text" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary role_add_modal_confirm"
                    data-dismiss="modal">Done</button>
                <button type="button" class="btn btn-light-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="role_edit_modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title ">Role Edition</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <h6>Code</h6>
                            <input id="role_edit_code" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <h6>Role Name</h6>
                            <input id="role_edit_name" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <h6>Description</h6>
                            <input id="role_edit_description" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <h6>Role Permissions</h6>
                        <div class="accordion" id="accordion_role">
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h5 class="card-title collapsed" data-toggle="collapse" data-target="#collapseOne"
                                        aria-expanded="false" aria-controls="collapseOne">
                                        <i class="icon">+</i> Accordion Item #1
                                    </h5>
                                </div>
                                <div id="collapseOne" class="collapse" aria-labelledby="headingOne"
                                    data-parent="#accordion_role">
                                    <div class="card-body">
                                        Content for Accordion Item #1.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary role_edit_modal_confirm"
                    data-dismiss="modal">Done</button>
                <button type="button" class="btn btn-light-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    let _clear_role_permissions = []
    let _role_permissions = []

    const renderPermissionAccordion = permissions => {
        let html = ""
        if (!permissions.length) {
            html += `<div class="w-100 d-flex justify-content-center align-items-center my-10"><h1>No Permission</h1></div>`
        } else {
            let _permissions = []
            permissions.forEach(permission => {
                const prefix = permission.name.split("_")[0]
                if (!_permissions[prefix]) {
                    _permissions[prefix] = []
                }
                _permissions[prefix].push({
                    id: permission.id,
                    name: permission.name,
                    desc: permission.description
                })
            })

            for (var key in _permissions) {
                let sub_html = ""
                _permissions[key].forEach(item => {
                    _clear_role_permissions[item.id] = _role_permissions[item.id] = 1

                    sub_html += `<tr class="w-100 pb-3">
                                    <td style="width: 40%"><h5 class="d-flex justify-content-end align-items-center m-0 px-2 py-2">${item.name}</h5></td>
                                    <td class="d-flex justify-content-start align-items-center text-center" style="width: 60%">
                                        <div class="d-flex justify-content-start align-items-center m-0 px-2" data-id="${item.id}">
                                            <div class="d-flex justify-content-start align-items-center px-1 py-2 mx-1">
                                                <input data-value="2" class="permission_edit mx-1" type="checkbox" style="width: 24px; height: 24px;" id="permission_edit_create_${item.id}" />
                                                <label for="permission_edit_create_${item.id}" class="align-items-center m-0">
                                                    <h6 class="m-0">&nbsp;Create</h6>
                                                </label>
                                            </div>
                                            <div class="d-flex justify-content-start align-items-center px-1 mx-1">
                                                <input data-value="3" class="permission_edit mx-1" type="checkbox" style="width: 24px; height: 24px;" id="permission_edit_read_${item.id}" />
                                                <label for="permission_edit_read_${item.id}" class="align-items-center m-0">
                                                    <h6 class="m-0">&nbsp;Read</h6>
                                                </label>
                                            </div>
                                            <div class="d-flex justify-content-start align-items-center px-1 mx-1">
                                                <input data-value="5" class="permission_edit mx-1" type="checkbox" style="width: 24px; height: 24px;" id="permission_edit_write_${item.id}" />
                                                <label for="permission_edit_write_${item.id}" class="align-items-center m-0">
                                                    <h6 class="m-0">&nbsp;Write</h6>
                                                </label>
                                            </div>
                                            <div class="d-flex justify-content-start align-items-center px-1 mx-1">
                                                <input data-value="7" class="permission_edit mx-1" type="checkbox" style="width: 24px; height: 24px;" id="permission_edit_delete_${item.id}" />
                                                <label for="permission_edit_delete_${item.id}" class="align-items-center m-0">
                                                    <h6 class="m-0">&nbsp;Delete</h6>
                                                </label>
                                            </div>
                                        </div>
                                    </td>
                                </tr>`
                })
                html += `<div class="card">
                            <div class="card-header" id="heading-${key}">
                                <h3 class="card-title collapsed" data-toggle="collapse" data-target="#collapse-${key}"
                                    aria-expanded="false" aria-controls="collapse-${key}">
                                    <i class="icon">+</i> ${key}
                                </h3>
                            </div>
                            <div id="collapse-${key}" class="collapse" aria-labelledby="heading-${key}" data-parent="#accordion_role">
                                <div class="card-body px-0">
                                    <table class="w-100">
                                        <tbody>${sub_html}</tbody>
                                    </table>
                                </div>
                            </div>
                        </div>`
            }
        }
        $("#accordion_role").html(html)
    }

    const loadPermissions = async () => {
        await $.ajax({
            url: "{{env.HOST_URL}}{{env.PREFIX_URL}}/setting/permission/readPermission",
            method: "POST",
            data: {},
            success: function (data) {
                renderPermissionAccordion(data.data)
            }
        })
    }

    $(document).ready(async () => {
        await loadPermissions()

        let role_tb = $('#role_tb').DataTable({
            "pagingType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            language: {
                search: "_INPUT_",
                searchPlaceholder: "Search records",
            },
            "ajax": {
                "url": "{{env.HOST_URL}}{{env.PREFIX_URL}}/setting/role/readRole",
                "type": "POST"
            },
            "columns": [
                { data: 'code' },
                { data: 'name' },
                { data: 'description' },
                {
                    data: 'createdAt',
                    render: function (data, type, row) {
                        return new Date(row.createdAt).toLocaleDateString()
                    }
                },
                {
                    data: 'id',
                    render: function (data, type, row) {
                        return `
                        <div idkey="${row.id}">
                            <span class="btn btn-icon btn-sm btn-light-warning role_edit_btn"><i class="fas fa-edit"></i></span>
                            <span class="btn btn-icon btn-sm btn-light-danger  role_delete_btn"><i class="fas fa-trash"></i></span>
                        </div>
                        `
                    }
                }
            ]
        });

        $(".role_add_btn").click(function () {
            $("#role_add_code").val("");
            $("#role_add_name").val("");
            $("#role_add_description").val("");

            $("#role_add_modal").modal('show');
        });

        $(document).on("click", ".role_edit_btn", async function () {
            window.id = $(this).parent().attr("idkey");
            await $.ajax({
                url: '{{env.HOST_URL}}{{env.PREFIX_URL}}/setting/role/readOneRole',
                method: "POST",
                data: { id: window.id },
                dataType: "json",
                success: function (data) {
                    $("#role_edit_code").val(data['role']['code']);
                    $("#role_edit_name").val(data['role']['name']);
                    $("#role_edit_description").val(data['role']['description']);

                    $(".permission_edit").each(function () {
                        $(this).prop("checked", false)
                    })
                    _role_permissions = _clear_role_permissions
                    data['role_permission'].forEach(item => {
                        _role_permissions[item.permission_id] = item.value
                        $(`#permission_edit_create_${item.permission_id}`).prop("checked", item.value % 2 == 0)
                        $(`#permission_edit_read_${item.permission_id}`).prop("checked", item.value % 3 == 0)
                        $(`#permission_edit_write_${item.permission_id}`).prop("checked", item.value % 5 == 0)
                        $(`#permission_edit_delete_${item.permission_id}`).prop("checked", item.value % 7 == 0)
                    })

                    $("#role_edit_modal").modal('show');
                }
            });
        });

        $(".role_add_modal_confirm").click(function () {
            if (!$("#role_add_code").val()) {
                toastr.warning("Please input the code")
                return
            }
            if (!$("#role_add_name").val()) {
                toastr.warning("Please input the role name")
                return
            }
            $.ajax({
                url: `{{env.HOST_URL}}{{env.PREFIX_URL}}/setting/role/addRole`,
                method: "POST",
                data: {
                    code: $("#role_add_code").val(),
                    name: $("#role_add_name").val(),
                    description: $("#role_add_description").val()
                },
                dataType: "text",
                success: function (data) {
                    $("#role_tb").DataTable().ajax.reload();
                    toastr.success("Saved Successfully!");
                },
                error: function (error) {
                    toastr.error("An error was occurred on the server!")
                }
            });
        });

        $(".role_edit_modal_confirm").click(function () {
            if (!$("#role_edit_code").val()) {
                toastr.warning("Please input the code")
                return
            }
            if (!$("#role_edit_name").val()) {
                toastr.warning("Please input the role name")
                return
            }
            $.ajax({
                url: `{{env.HOST_URL}}{{env.PREFIX_URL}}/setting/role/updateRole`,
                method: "POST",
                data: {
                    id: window.id,
                    code: $("#role_edit_code").val(),
                    name: $("#role_edit_name").val(),
                    description: $("#role_edit_description").val(),
                    role_permission: _role_permissions
                },
                dataType: "text",
                success: function (data) {
                    $("#role_tb").DataTable().ajax.reload();
                    if (data == "ok") {
                        toastr.success("Saved Successfully!");
                    }
                },
                error: function (error) {
                    toastr.error("An error was occurred on the server!")
                }
            });
        });

        $(document).on("click", ".role_delete_btn", function () {
            window.id = $(this).parent().attr("idkey");
            var tmp = $(this).parent().parent().parent();
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: '{{env.HOST_URL}}{{env.PREFIX_URL}}/setting/role/deleteRole',
                        method: "POST",
                        data: { id: window.id },
                        dataType: "text",
                        success: function (data) {
                            if (data == "ok")
                                tmp.remove();
                        }
                    });
                }
            });
        });

        $(document).on("click", ".permission_edit", function () {
            const permission_id = $(this).parent().parent().attr("data-id")
            const index = $(this).attr("data-value")
            if ($(this).prop("checked") == true) {
                _role_permissions[parseInt(permission_id)] *= parseInt(index)
            } else {
                _role_permissions[parseInt(permission_id)] /= parseInt(index)
            }
        })
    });
</script>