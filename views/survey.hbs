<div class="row my-3 p-10 bg-white border rounded">
    <div class="col-12 mb-4 d-flex justify-content-between align-items-center my-5">
        <div class="">
            <h3>Survey</h3>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <h4 class="m-0 mx-3">Category: </h4>
            <select class="form-control w-300px" id="survey_search_cate"></select>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <h4 class="m-0 mx-3">Language: </h4>
            <select class="form-control w-300px" id="survey_search_language"></select>
        </div>
        <div style="padding:10px 20px 10px 20px;" class="survey_add_btn btn btn-light-primary btn-icon"><i
                class='fa fa-plus'></i></div>
    </div>
    <div class="col-12">
        <div class="table-responsive">
            <table class="table" id="survey_tb">
                <thead>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Lang</th>
                    <th>Build</th>
                    <th>Status</th>
                    <th>Action</th>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="survey_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <input type="hidden" id="survey_modal_type" />
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title ">Survey</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <h6>Category</h6>
                            <select class="form-control" id="survey_cate"></select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <h6>Type</h6>
                            <select class="form-control" id="survey_type"></select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <h6>Language</h6>
                            <select class="form-control" id="survey_language"></select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <h6>Name</h6>
                            <input id="survey_name" class="form-control" type="text" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <h6>Description</h6>
                            <div class="summernote" id="survey_desc"></div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <h6>Status</h6>
                            <select id="survey_status" class="form-control">
                                <option value="0">Inactive</option>
                                <option value="1">Active</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-8 d-flex justify-content-between">
                        <div class="d-flex justify-content-start align-items-center mx-1">
                            <input type="radio" style="width: 21px; height: 21px;" id="survey_page_one" class="mx-1"
                                value="0" name="survey_page_length" checked />
                            <label for="survey_page_one" class="align-items-center m-0">
                                <h6 class="m-0">&nbsp;Single Page</h6>
                            </label>
                        </div>
                        <div class="d-flex justify-content-start align-items-center mx-1">
                            <input type="radio" style="width: 21px; height: 21px;" id="survey_page_multi" class="mx-1"
                                value="1" name="survey_page_length" />
                            <label for="survey_page_multi" class="align-items-center m-0">
                                <h6 class="m-0">&nbsp;Multi Page</h6>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary survey_modal_confirm"
                    data-dismiss="modal">Done</button>
                <button type="button" class="btn btn-light-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="survey_sms_modal">
    <div class="modal-dialog">
